<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="com.grd.scoreboard.MainActivity">
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCOREBOARD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceLarge"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ketteamA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="Arial"
            android:text="TEAM A"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scorea"
            android:textSize="80sp"
            android:text="0"
            android:textAlignment="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tigapoina"
            android:layout_gravity="center"
            android:text="3 POINT"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@color/hijau"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duapoina"
            android:layout_gravity="center"
            android:text="2 POINT"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@color/hijau"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freea"
            android:layout_gravity="center"
            android:text="FREE THROW"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@color/hijau"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ketteamB"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="TEAM B"
            android:layout_marginTop="80dp"
            android:fontFamily="Arial"
            android:textColor="@color/black"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scoreb"
            android:textSize="80sp"
            android:text="0"
            android:textAlignment="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tigapoinb"
            android:layout_gravity="center"
            android:text="3 POINT"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@color/hijau"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duapoinb"
            android:layout_gravity="center"
            android:text="2 POINT"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@color/hijau"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freeb"
            android:layout_gravity="center"
            android:text="FREE THROW"
            android:textSize="14sp"
            android:layout_marginTop="25dp"
            android:textColor="#FFFFFF"
            android:background="@color/hijau"/>
    </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul"
        android:layout_centerHorizontal="true"
        android:background="#e81919"
        android:text="Reset"
        android:layout_marginTop="450dp"
        android:textColor="#FFFFFF" />
</RelativeLayout>
